{
  "exclude": ["node_modules", "build"],
  "include": ["src/**/*"],

  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "baseUrl": ".",
    "paths": {
      // fb core
      "@fb-theme/*": ["src/fb/theme/*"],
      "@fb-util/*": ["src/fb/utils/*"],
      //
      "@/*": ["./src/*"],
      "~/*": ["./public/*"]
    }
  }
}
