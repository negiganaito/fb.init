{
  "exclude": ["node_modules", "build"],
  "include": ["src/**/*"],

  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "baseUrl": ".",
    "paths": {
      //
      "@fb-text/*": ["src/fb.chat/text/*"],
      "@fb-context/*": ["src/fb.chat/contexts/*"],
      "@fb-hook/*": ["src/fb.chat/hooks/*"],
      "@fb-util/*": ["src/fb.chat/utils/*"],
      "@placeholder/*": ["src/fb.chat/placeholder/*"],
      "@fb-layout/*": ["src/fb.chat/layout/*"],
      "@fb-unknown/*": ["src/fb.chat/unknown/*"],
      "@fb-user-agent/*": ["src/fb.chat/user-agent/*"],
      "@fb-event-interaction/*": ["src/fb.chat/event-interaction/*"],
      "@fb-keyboard/*": ["src/fb.chat/keyboard/*"],
      "@fb-constants/*": ["src/fb.chat/constants/*"],
      "@fb-focus/*": ["src/fb.chat/focus/*"],
      "@fb-contextual-layer/*": ["src/fb.chat/contextual-layer/*"],
      "@fb-image/*": ["src/fb.chat/image/*"],
      "@fb-glimmer/*": ["src/fb.chat/glimmer/*"],
      "@fb-process-ring/*": ["src/fb.chat/process-ring/*"],
      "@fb-tooltip/*": ["src/fb.chat/tooltip/*"],
      "@fb-card/*": ["src/fb.chat/card/*"],
      "@fb-pressable/*": ["src/fb.chat/pressable/*"],
      "@fb-link/*": ["src/fb.chat/link/*"],
      "@fb-button/*": ["src/fb.chat/button/*"],
      "@fb-form-input/*": ["src/fb.chat/form-input/*"],
      "@fb-icons/*": ["src/fb.chat/icons/*"],
      "@fb-comps/*": ["src/fb.chat/_comp/*"],
      "@fb-select/*": ["src/fb.chat/select/*"],
      "@fb-view/*": ["src/fb.chat/view/*"],
      "@fb-menu-popover/*": ["src/fb.chat/menu-popover/*"],
      "@fb-cell/*": ["src/fb.chat/cell/*"],
      "@fb-list/*": ["src/fb.chat/list/*"],
      "@fb-dialog/*": ["src/fb.chat/dialog/*"],
      "@fb-toast/*": ["src/fb.chat/toast/*"],
      "@fb-network/*": ["src/fb.chat/network/*"],
      "@fb-callout/*": ["src/fb.chat/callout/*"],
      "@fb-checkbox-radio/*": ["src/fb.chat/checkbox-radio/*"],
      "@fb-collapse/*": ["src/fb.chat/collapse/*"],
      "@fb-text-area/*": ["src/fb.chat/text-area/*"],
      "@fb-file-selector/*": ["src/fb.chat/file-selector/*"],
      "@fb-lazy-load-component/*": ["src/fb.chat/lazy-load-component/*"],
      "@fb-platform/*": ["src/fb.chat/platform/*"],
      "@fb-comet-root/*": ["src/fb.chat/comet-root/*"],
      "@fb-badge/*": ["src/fb.chat/badge/*"],
      "@fb-switch/*": ["src/fb.chat/switch/*"],
      //
      "@/*": ["./src/*"],
      "~/*": ["./public/*"]
    }
  }
}
